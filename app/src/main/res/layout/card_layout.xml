<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listView_trial"
    android:layout_margin="6dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_trial"
                android:layout_width="165dp"
                android:layout_height="145dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/title_tv_trial"
                android:text="firstName"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/imageview_trial"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/title_lastName_trial"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="lastName"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@+id/imageview_trial"
                app:layout_constraintTop_toBottomOf="@+id/title_tv_trial"></TextView>

            <TextView
                android:id="@+id/title_email_trial"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.02"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@+id/imageview_trial"
                app:layout_constraintTop_toBottomOf="@+id/title_lastName_trial"></TextView>

            <TextView
                android:id="@+id/title_id_trial"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="id"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintVertical_bias="0.02"
                app:layout_constraintStart_toEndOf="@+id/imageview_trial"
                app:layout_constraintTop_toBottomOf="@+id/title_email_trial"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>